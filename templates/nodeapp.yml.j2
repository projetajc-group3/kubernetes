apiVersion: v1
kind: Service
metadata:
  name: nodeport
spec:
  type: NodePort
  selector:
    app: nodeapp
  ports:
  #port du pod a utiliser
    - targetPort: 3000
      #port du service
      port: 3000
      #port utilisable depuis l'extrieur du cluster
      nodePort: 30001

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: nodeapp
  labels:
    app: nodeapp
spec:
  replicas: 2
  selector:
    matchLabels:
      app: nodeapp
  template:
    metadata:
      labels:
        app: nodeapp
    spec:
      containers:
        - name: {{ name_containers }}
          image: {{ image_containers }}
          ports:
            - containerPort: {{ port_containers }}
